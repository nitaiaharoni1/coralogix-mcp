#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run build to check for TypeScript errors
echo "🔍 Running build to check for TypeScript errors..."
npm run build

# Run secret scanning
echo "🔍 Scanning for secrets with secretlint..."
npm run scan-secrets

if [ $? -ne 0 ]; then
  echo "❌ Secrets detected!"
  echo "Please remove any sensitive data before committing."
  exit 1
fi

echo "✅ Pre-commit checks passed!"