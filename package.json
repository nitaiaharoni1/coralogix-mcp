{
  "name": "coralogix-mcp",
  "version": "2.0.0",
  "description": "Comprehensive Model Context Protocol server for Coralogix observability platform - 55+ tools for logs, metrics, traces, alerts, parsing rules, and complete API access",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "coralogix-mcp": "dist/server.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/server.js",
    "build:watch": "tsc --watch",
    "scan-secrets": "secretlint \"src/**/*\" \"tests/**/*\" \"*.ts\" \"*.js\" \"*.json\" \"*.md\"",
    "start": "node dist/server.js",
    "dev": "ts-node --esm server.ts",
    "dev:watch": "ts-node --esm --watch server.ts",
    "test": "npm run build && jest tests/e2e",
    "test:parallel": "npm run build && jest tests/e2e --maxWorkers=50%",
    "test:serial": "npm run build && jest tests/e2e --maxWorkers=1",
    "test:watch": "npm run build && jest tests/e2e --watch",
    "test:coverage": "npm run build && jest tests/e2e --coverage",
    "test:report": "npm run build && jest tests/e2e --reporters=default --reporters=jest-html-reporters",
    "test:verbose": "npm run build && jest tests/e2e --verbose --reporters=default",
    "test:ci": "npm run build && jest tests/e2e --ci --coverage --maxWorkers=50% --reporters=default --reporters=jest-html-reporters",
    "clean": "rimraf dist coverage test-reports .jest-cache",
    "prepare": "husky",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "coralogix",
    "observability",
    "logs",
    "metrics",
    "traces",
    "monitoring",
    "alerts",
    "parsing-rules",
    "log-parsing",
    "dataprime",
    "lucene",
    "claude",
    "ai",
    "typescript",
    "enterprise",
    "analytics",
    "siem",
    "devops"
  ],
  "author": "Nitai Aharoni <nitaiaharoni1@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/",
    ".env.example",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true,
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "axios": "^1.9.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@jest/reporters": "^30.0.0-beta.3",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "detect-secrets": "^1.0.6",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.10",
    "secretlint": "^11.2.4",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "git secrets --pre_commit_hook --"
    ],
    "*.{ts,js}": [
      "echo 'Checking TypeScript files for secrets...'"
    ]
  }
}
