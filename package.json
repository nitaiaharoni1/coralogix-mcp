{
  "name": "travel-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for travel services using Amadeus API - flight search, hotel booking, airport information, and travel recommendations",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "bin": {
    "travel-mcp": "dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/server.js",
    "dev": "ts-node --esm server.ts",
    "dev:watch": "ts-node --esm --watch server.ts",
    "test": "npm run build && jest tests/e2e",
    "test:parallel": "npm run build && jest tests/e2e --maxWorkers=50%",
    "test:serial": "npm run build && jest tests/e2e --maxWorkers=1",
    "test:watch": "npm run build && jest tests/e2e --watch",
    "test:coverage": "npm run build && jest tests/e2e --coverage",
    "test:report": "npm run build && jest tests/e2e --reporters=default --reporters=jest-html-reporters",
    "test:verbose": "npm run build && jest tests/e2e --verbose --reporters=default",
    "test:ci": "npm run build && jest tests/e2e --ci --coverage --maxWorkers=50% --reporters=default --reporters=jest-html-reporters",
    "clean": "rimraf dist coverage test-reports .jest-cache",
    "prepare": "husky",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "travel",
    "amadeus",
    "flights",
    "hotels",
    "airports",
    "booking",
    "claude",
    "ai",
    "travel-api",
    "typescript"
  ],
  "author": "Nitai Aharoni <nitaiaharoni1@gmail.com>",
  "license": "MIT",
  "files": [
    "dist/",
    ".env.example",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true,
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "amadeus-ts": "^5.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@jest/reporters": "^30.0.0-beta.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.10",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
